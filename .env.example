# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/invenflow

# Backend Configuration
PORT=3001
NODE_ENV=development

# Cache Configuration
CACHE_ENABLED=true
CACHE_DEFAULT_TTL_MS=300000
CACHE_TAG_TTL_MS=3600000
CACHE_MAX_KEYS=20000
CACHE_WARM_INTERVAL_MS=300000

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# Stored Cleanup Configuration
STORED_SWEEP_INTERVAL_MINUTES=1

# Redis Configuration
# Either provide REDIS_URL or individual host/port/password values
REDIS_URL=
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_TLS=false
REDIS_POOL_MIN=2
REDIS_POOL_MAX=10

# Frontend Configuration
VITE_API_URL=http://localhost:3001